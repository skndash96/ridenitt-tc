generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Gender {
  MALE
  FEMALE
}

enum RideStatus {
  PENDING
  FULL
  COMPLETED
  CANCELLED
}

enum InviteStatus {
  PENDING
  ACCEPTED
  DECLINED
}

model User {
  id          String  @id @default(cuid())
  phoneNumber String  @unique
  name        String?
  gender      Gender?
  address     String?

  rides       Ride[]
  sentInvites Invite[] @relation(name: "sent_invs")
}

model Ride {
  id                String     @id @default(cuid())
  createdAt         DateTime   @default(now())
  status            RideStatus @default(PENDING)
  capacity          Int
  carModel          String
  ownerId           String
  earliestDeparture DateTime
  latestDeparture   DateTime
  groupId           String?

  owner           User     @relation(fields: [ownerId], references: [id])
  stops           Stop[]
  receivedInvites Invite[]
}

model Invite {
  id             String       @id @default(cuid())
  senderId       String
  receiverRideId String
  status         InviteStatus @default(PENDING)
  declineReason  String?

  sender       User @relation(name: "sent_invs", fields: [senderId], references: [id])
  receiverRide Ride @relation(fields: [receiverRideId], references: [id])
}

model Stop {
  id   String  @id @default(cuid())
  lat  Float
  lon  Float
  name String?

  rideId String
  ride   Ride   @relation(fields: [rideId], references: [id])
}
